  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MarketingPlatform Client Locally",
      "request": "launch",
      "type": "chrome",
      "url": "http://cmp-localdev.newscred.com:3000",
      "webRoot": "${workspaceFolder}/marketingplatform/client",
    },
    {
      "name": "Debug MarketingPlatform Client Remotely",
      "request": "launch",
      "type": "chrome",
      "url": "http://cmp-localdev.newscred.com:3000",
      "sourceMapPathOverrides": {
        "webpack:///./client/*": "${workspaceFolder}/marketingplatform/client/*",
      }
    },
  ]
}